{
    "name": "melibee",
    "version": "1.0.1",
    "description": "Melibee backend",
    "author": "Melibee",
    "license": "ISC",
    "private": true,
    "main": "./src/index.js",
    "keywords": [
        "javascript",
        "node",
        "nodejs",
        "es6",
        "eslint",
        "prettier",
        "boilerplate"
    ],
    "scripts": {
        "build": "rimraf ./build && tsc",
        "start": "npm run build && cross-env NODE_ENV=production node build/src/index.js",
        "start:dev": "npx nodemon",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.{js,ts}\" --config ./.prettierrc",
        "test": "jest",
        "test:watch": "jest --watch",
        "migrate": "npm run build && npx sequelize db:migrate --env \"development\"",
        "seed": "npm run build && npx sequelize db:seed:all",
        "migrate:undo": "npx sequelize db:migrate:undo:all",
        "migrate:reset": "npm rum migrate:undo && npm run migrate && npm run seed"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.14.2",
        "@types/sequelize": "^4.28.14",
        "@types/serve-favicon": "^2.5.3",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.4.3",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "rimraf": "^4.1.2",
        "sequelize-cli": "^6.6.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "ansi-colors": "^4.1.3",
        "app-root-path": "^3.1.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "fast-glob": "^3.2.12",
        "helmet": "^6.0.1",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "pg": "^8.9.0",
        "pg-hstore": "^2.3.4",
        "rand-token": "^1.0.1",
        "sequelize": "^6.29.0",
        "serve-favicon": "^2.5.0",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1"
    }
}
