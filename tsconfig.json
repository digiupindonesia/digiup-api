{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es6"],
        "module": "commonjs",
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": ["src/config/*"],
            "@server/*": ["src/server/*"],
            "@routes/*": ["src/routes/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@database/*": ["src/database/*"],
            "@controllers/*": ["src/controllers/*"],
            "@models/*": ["src/models/*"],
            "@presenters/*": ["src/presenters/*"],
            "@services/*": ["src/services/*"],
            "@views/*": ["src/views/*"],
            "@utils/*": ["src/utils/*"],
            "@public/*": ["public/*"],
            "@pri/*": ["prisma/*"],
            "@docs/*": ["docs/*"],
            "@logs/*": ["logs/*"],
            "@packagejson": ["package.json"]
        }
    },
    "include": ["src/**/*", "prisma/seeders", "prisma/migrations"],
    "exclude": ["coverage", "dist", "doc", "logs", "tests", "node_modules"]
}
