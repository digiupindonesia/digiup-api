{
    "name": "express-prisma-ts-boilerplate",
    "version": "1.0.1",
    "description": "A starter project written in TypeScript for quickly building Express RESTful APIs using ORM, loggers, schema validator, authentication, unit test coverage, and much more.",
    "author": {
        "name": "Vincent Jean",
        "email": "vincent.queimado@gmail.com",
        "url": "https://github.com/vincent-queimado"
    },
    "repository": "git@github.com:vincent-queimado/typescript-express-boilerplate.git",
    "license": "ISC",
    "private": true,
    "main": "./build/src/index.js",
    "keywords": [
        "nodejs",
        "express",
        "typescript",
        "prisma",
        "jest",
        "eslint",
        "prettier",
        "winston",
        "api",
        "crud",
        "orm",
        "boilerplate"
    ],
    "engines": {
        "node": ">=18.0",
        "npm": ">=9.0"
    },
    "scripts": {
        "build": "rimraf ./build && tsc",
        "start": "npm run build && cross-env NODE_ENV=production node build/src/app.js",
        "start:dev": "nodemon",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts",
        "prettier:check": "prettier --check \"src/**/*.{js,ts}\"",
        "prettier:write": "prettier --write \"src/**/*.{js,ts}\"",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "prisma:migrate": "prisma migrate dev --skip-seed --preview-feature",
        "prisma:format": "prisma format",
        "prisma:generate": "prisma generate",
        "prisma:generate:watch": "prisma generate --watch",
        "prisma:seed": "ts-node prisma/seed/seed.ts --preview-feature",
        "prisma:reset": "prisma migrate reset",
        "husky:prepare": "husky install && npx husky add .husky/pre-commit \"npx lint-staged\"",
        "precommit": "lint-staged",
        "commit": "git add . && git-cz"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.14.2",
        "@types/nodemailer": "^6.4.7",
        "@types/sequelize": "^4.28.14",
        "@types/serve-favicon": "^2.5.3",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^9.0.1",
        "@types/xss-filters": "^0.0.27",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "commitizen": "4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "init": "0.1.2",
        "jest": "^29.4.3",
        "lint-staged": "^13.1.4",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "prisma": "^4.14.0",
        "rimraf": "^4.1.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@prisma/client": "^4.14.0",
        "ansi-colors": "^4.1.3",
        "app-root-path": "^3.1.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "fast-glob": "^3.2.12",
        "helmet": "^6.0.1",
        "jsonwebtoken": "^9.0.0",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.1",
        "pg": "^8.9.0",
        "pg-hstore": "^2.3.4",
        "rand-token": "^1.0.1",
        "serve-favicon": "^2.5.0",
        "swagger-autogen": "^2.23.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^4.6.2",
        "uuid": "^9.0.0",
        "winston": "^3.8.2",
        "winston-daily-rotate-file": "^4.7.1",
        "xss-filters": "^1.2.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{ts, js}": [
            "npm run prisma:format",
            "npm run lint:fix",
            "npm run prettier:write"
        ],
        "**/*.{json, md}": [
            "npm run prettier:write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
