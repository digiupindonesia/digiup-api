{
    "name": "express-prisma-ts-boilerplate",
    "version": "1.0.1",
    "description": "A starter project written in TypeScript for quickly building Express RESTful APIs using ORM, loggers, schema validator, authentication, unit test coverage, and much more.",
    "author": {
        "name": "Vincent Jean",
        "email": "vincent.queimado@gmail.com",
        "url": "https://github.com/vincent-queimado"
    },
    "repository": "git@github.com:vincent-queimado/typescript-express-boilerplate.git",
    "license": "ISC",
    "private": true,
    "main": "./build/src/index.js",
    "keywords": [
        "nodejs",
        "express",
        "typescript",
        "prisma",
        "jest",
        "eslint",
        "prettier",
        "winston",
        "zod",
        "swagger",
        "restful",
        "orm",
        "jwt",
        "boilerplate"
    ],
    "engines": {
        "node": ">=18.0",
        "npm": ">=9.0"
    },
    "scripts": {
        "prebuild": "rimraf ./build",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "copyfiles": "copyfiles -u 1 public/**/*.* build/public/ && copyfiles -u 1 src/views/**/*.* build/src/ && copyfiles -u 1 src/utils/nodemailer/templates/**/*.* build/src/",
        "start:prod": "npm run prebuild && npm run build && npm run copyfiles && cross-env NODE_ENV=production node build/src/app.js",
        "start:dev": "nodemon",
        "lint:check": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts",
        "prettier:check": "prettier --check \"src/**/*.{js,ts}\"",
        "prettier:write": "prettier --write \"src/**/*.{js,ts}\"",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:badges": "npm run test  && jest-coverage-badges",
        "prisma:format": "prisma format",
        "prisma:migrate": "prisma migrate dev --skip-seed --preview-feature",
        "prisma:generate": "prisma generate",
        "prisma:generate:watch": "prisma generate --watch",
        "prisma:seed": "ts-node prisma/seed/seed.ts --preview-feature",
        "prisma:reset": "prisma migrate reset",
        "prisma:reset:force": "prisma migrate reset -f",
        "husky:prepare": "husky install && npx husky add .husky/pre-commit \"npx lint-staged\"",
        "precommit": "lint-staged",
        "commit": "git add . && git-cz"
    },
    "devDependencies": {
        "@types/bcryptjs": "^3.0.0",
        "@types/cors": "^2.8.17",
        "@types/ejs": "^3.1.5",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.14.1",
        "@types/nodemailer": "^6.4.17",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/sequelize": "^4.28.20",
        "@types/serve-favicon": "^2.5.7",
        "@types/supertest": "^6.0.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "@types/xss-filters": "^1.2.0",
        "@types/yamljs": "^0.2.34",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "commitizen": "4.3.1",
        "copyfiles": "^2.4.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "init": "0.1.2",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.1",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "prisma": "^6.6.0",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.15",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@prisma/client": "^6.6.0",
        "ansi-colors": "^4.1.3",
        "app-root-path": "^3.1.0",
        "bcryptjs": "^3.0.2",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.0",
        "fast-glob": "^3.3.3",
        "googleapis": "^148.0.0",
        "helmet": "^8.1.0",
        "jest-coverage-badges": "^1.1.2",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.30.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.10.1",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.14.1",
        "pg-hstore": "^2.3.4",
        "postman-to-openapi": "^3.0.1",
        "rand-token": "^1.0.1",
        "serve-favicon": "^2.5.0",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "xss-filters": "^1.2.7",
        "yamljs": "^0.3.0",
        "zod": "^3.24.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{ts, js}": [
            "npm run prisma:format",
            "npm run lint:fix",
            "npm run prettier:write"
        ],
        "**/*.{json, md}": [
            "npm run prettier:write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
