{
  "name": "express-typescript-boilerplate",
  "version": "1.0.1",
  "description": "Boilerplate para iniciar um projeto de API Node.js em Typescript com Express, ORM Sequelize, Winston para gestão de logs em arquivos rotativos e Jest para testes unitários.",
  "author": {
    "name": "Vincent Queimado",
    "email": "vincent.queimado@gmail.com"
  },
  "license": "ISC",
  "private": true,
  "main": "./build/src/index.js",
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "sequelize",
    "jest",
    "eslint",
    "prettier",
    "winston",
    "api",
    "crud",
    "orm",
    "boilerplate"
  ],
  "engines": {
    "node": ">=18.0",
    "npm": ">=9.0"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && cross-env NODE_ENV=production node build/src/app.js",
    "start:dev": "npx nodemon",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" --config ./.prettierrc",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "npm run build && npx sequelize db:migrate --env \"development\"",
    "seed": "npm run build && npx sequelize db:seed:all",
    "migrate:undo": "npx sequelize db:migrate:undo:all",
    "migrate:reset": "npm rum migrate:undo && npm run migrate && npm run seed"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.2",
    "@types/nodemailer": "^6.4.7",
    "@types/sequelize": "^4.28.14",
    "@types/serve-favicon": "^2.5.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.5.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "app-root-path": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "rand-token": "^1.0.1",
    "sequelize": "^6.29.0",
    "serve-favicon": "^2.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
